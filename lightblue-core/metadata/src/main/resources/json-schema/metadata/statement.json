    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "statements": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "sql": {
                        "type": "string"
                    },
                    "type": {
                        "enum":  [ "select", "insert", "update", "delete" ]
                    },
                    "jndi" : {
                        "type": "string"
                    },
                    "needsWhere" : {
                        "type": "boolean"
                    },
                    "needsAnd" : {
                        "type": "boolean"
                    }
                },
                "required": [
                    "sql",
                    "type",
                    "jndi",
                    "needsWhere",
                    "needsAnd"
                ],
                "additionalProperties": false
            }
        },
        "bindings": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "field": {
                        "type": "object",
                        "properties": {
                            "in": {
                                "$ref": "inout.json#"
                            },
                            "out" : {
                                "$ref": "inout.json#"
                            }
                        },
                        "anyOf": [
                            {
                                "title": "in required",
                                "required": [
                                    "in"
                                ]
                            },
                            {
                                "title": "out required",
                                "required": [
                                    "out"
                                ]
                            }
                        ],
                        "additionalProperties": false
                    }
                },
                "required": [
                    "field"
                ],
                "additionalProperties": false
            }
        },
    },
    "required": [
        "select",
        "insert",
        "update",
        "delete"
    ],
    "additionalProperties": false
}
